<robot name="tom" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="M_PI" value="3.1415926535897931" />
  <xacro:property name="VELOCITY_LIMIT_SCALE" value="0.6" />
  <xacro:property name="DEG2RAD" value="0.01745329251994329577" />

  <!--Base Parameters -->
  <xacro:property name="base_frame_mass" value="250.0" />

  <xacro:property name="base_hight" value="0.4" />
  <xacro:property name="base_width" value="0.60" />
  <xacro:property name="base_length" value="1.0" />
  <xacro:property name="base_collision_offset" value="0.10" />

  <xacro:property name="base_x_origin" value="0.4" />
  <xacro:property name="base_z_origin" value="0.5" />

  <!--Torso Parameters -->
  <xacro:property name="torso_hight" value="0.75" />
  <xacro:property name="torso_width" value="0.45" />
  <xacro:property name="torso_length" value="0.125" />
  <xacro:property name="torso_collision_offset" value="0.10" />

  <!--Wheel Parameters -->
  <xacro:property name="wheel_radius" value="0.1" />
  <xacro:property name="wheel_length" value="0.075" />

  <!--Sensor Parameters -->
  <xacro:property name="laser_hight" value="0.05" />
  <xacro:property name="laser_radius" value="0.02" />

  <!--Offset Parameters -->
  <xacro:property name="jr3_hight" value="0.05" />
  <xacro:property name="jr3_radius" value="0.035" />

  <xacro:property name="arm_joint_y_offset" value="0.225" />
  <xacro:property name="arm_joint_roll_offset" value="2.6061" />
  <xacro:property name="arm_joint_pitch_offset" value="0.6271" />

  <xacro:property name="adapter_z_offset" value="0.045" />
  <xacro:property name="adapter_joint_x_offset" value="0.045" />

  <xacro:property name="floor_to_base_frame" value="0.5" />
	
	


	



</robot>
