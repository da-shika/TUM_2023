            <angular>0.4</angular>
        </velocity_decay>
    </gazebo>
    
    <gazebo reference="${prefix}link_${finger_label}_3">
        <gravity>false</gravity>
        <selfCollide>false</selfCollide>
	    <velocity_decay>
            <linear>0.2</linear>
            <angular>0.4</angular>
        </velocity_decay>
    </gazebo>
    
    <gazebo reference="${prefix}link_${finger_label}_3_tip">
        <gravity>false</gravity>
